<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBlue"
        app:title="To Test Material Component" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:theme="@style/DefaultButtonStyle">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/navigationBottom_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BottomNavigation" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tabs_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tabs" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/switches_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="switches" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkboxes_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="checkboxes" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/radioButton_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RadioButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/textField_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text field" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/topBar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top bar" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/slider_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slider" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fabS_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FABs" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/progress_indicator_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress Indicator" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/snackbar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SnackBar" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/divider_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Divider" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dialog" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/draggable_cardView_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Draggable CardView" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cardView_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CardView" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bottomSheet_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bottom Sheet" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>