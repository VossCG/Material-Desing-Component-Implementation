<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/continuous_slider_value_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Continuoust Slider Value :" />

    <!-- Continuous slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/continuous_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="30.0"
        style="@style/Widget.App.Slider"
        app:haloColor="@color/darkGreen"
        android:valueFrom="0.0"
        android:valueTo="100.0" />

    <TextView
        android:id="@+id/continuous_range_slider_value_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Continuous Range Slider Value :" />

    <!-- Continuous Range slider   -->
    <com.google.android.material.slider.RangeSlider
        android:id="@+id/continuous_range_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0.0"
        app:haloColor="@color/lightYellow"
        android:valueTo="100.0"
        app:values="@array/ranger_slider" />


    <TextView
        android:id="@+id/discrete_slider_value_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Discrete Slider Value :" />

    <!-- Discrete slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/discrete_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stepSize="10"
        android:value="30"
        style="@style/Widget.App.Slider"
        android:valueFrom="0"
        android:valueTo="100" />

    <TextView
        android:id="@+id/discrete_range_slider_value_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Discrete Range Slider Value :" />

    <!-- Discrete Ranger slider -->
    <com.google.android.material.slider.RangeSlider
        android:id="@+id/discrete_range_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stepSize="10"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:values="@array/ranger_slider" />


</androidx.appcompat.widget.LinearLayoutCompat>