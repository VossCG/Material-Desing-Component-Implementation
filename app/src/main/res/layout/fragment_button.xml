<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBlue"
        android:padding="10dp"
        android:text="Test Button Component"
        android:textSize="30sp" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text Button"
            android:textColor="@color/white" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            app:dividerColor="@color/white"
            app:dividerThickness="1dp" />

        <!-- Text Button   -->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text Button"
            android:textColor="@color/lightYellow"
            android:textSize="20sp" />
        <!-- Text Button With Icon  -->

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text Button with icon "
            android:textColor="@color/lightYellow"
            android:textSize="20sp"
            app:icon="@drawable/ic_baseline_settings_24" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/components_margin_top"
            android:text="Outlined Button"
            android:textColor="@color/white" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            app:dividerColor="@color/white"
            app:dividerThickness="1dp" />

        <!-- Outlined Button   -->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/components_margin_top"
            android:text="Outlined Button"
            android:textColor="@color/darkYellow"
            app:strokeColor="@color/lightYellow"
            app:strokeWidth="2dp" />

        <!-- Outlined Button With Icon  -->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outlined Button with Icon"
            android:textColor="@color/darkYellow"
            app:icon="@drawable/ic_baseline_search_24"
            app:strokeColor="@color/lightYellow"
            app:strokeWidth="2dp" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Contained Button"
            android:textColor="@color/white" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            app:dividerColor="@color/white"
            app:dividerThickness="1dp" />

        <!-- Contained Button -->
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/components_margin_top"
            android:text="contained Button" />

        <!-- Contained Button With Icon -->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contained Button"
            app:icon="@drawable/ic_baseline_dashboard_24" />

        <TextView
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Toggle Button"
            android:textColor="@color/white" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            app:dividerColor="@color/white"
            app:dividerThickness="1dp" />

        <!-- Toggle Button -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/components_margin_top"
            android:theme="@style/ThemeOverlay.App.ToggleButton"
            app:selectionRequired="true">

            <Button
                android:id="@+id/toggle_button1"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button 1" />

            <Button
                android:id="@+id/toggle_button2"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button 2" />

            <Button
                android:id="@+id/toggle_button3"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button 3" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Toggle Button Icon Only -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/iconOnly_toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:theme="@style/ThemeOverlay.App.ToggleButton"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/alignLeft_iconButton"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_format_align_left_24" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/alignCenter_iconButton"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_format_align_center_24" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/alignRight_iconButton"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_format_align_right_24" />
        </com.google.android.material.button.MaterialButtonToggleGroup>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>

